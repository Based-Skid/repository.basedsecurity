<addon id="service.cronxbmc"
    name="Skids Cron Utility" version="1.0.1" provider-name="Based_Skid">
  <requires>
    <import addon="xbmc.python" version="2.24.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="gui.py"> 
     <provides>executable</provides> 
  </extension> 
  <extension point="xbmc.service" library="service.py" start="login" />
  <extension point="xbmc.python.module" library="resources/lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">A customizable Cron timer for Kodi. </summary>
    <description lang="en">Create cron timers for Kodi functions. This addon can schedule and run any built-in Kodi functions. No more reliance on add-on developers to allow for "timer" functionality, no more scripts running on other machines to send commands to your HTPC. All of your timers can now be handled directly within Kodi. It can also display notifications when your tasks run if configured to do so.</description>
    <platform>all</platform>
  </extension>
</addon>
<addon id="script.program.updategmscore"
  name="UpdateGMSCore"
  version="1.0.2" 
  provider-name="Based_Skid">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.simple.downloader" version="1.9.5"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>android</platform>
    <summary lang="en">Update Google Play Services</summary>
    <description lang="en">Update Your PrebuiltGMS Core on Android (GooglePlay Services)</description>
	<disclaimer>Your device must already be rooted, and you will need to grant SU permissions to the script when prompted.</disclaimer>
  </extension>
</addon>
</addons>
